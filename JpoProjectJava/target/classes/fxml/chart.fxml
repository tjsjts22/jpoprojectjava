<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.weather.controller.ChartController"
      spacing="10" alignment="CENTER" stylesheets="/styles/style.css">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>
    <Label text="Temperature over Time" styleClass="header"/>
    <LineChart fx:id="chart">
        <xAxis>
            <CategoryAxis label="Time"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Temp (Â°C)"/>
        </yAxis>
    </LineChart>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="exportBtn" text="Export to TXT" styleClass="secondary-button"/>
    </HBox>
</VBox>